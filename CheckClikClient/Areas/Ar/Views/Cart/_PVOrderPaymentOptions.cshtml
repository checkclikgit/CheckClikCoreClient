                <img src="~/web-assets/images/mastercard.PNG" width="30">
                <img src="~/web-assets/images/visacard.png" width="30">
            </span>
        </div>
        if (Model.IsCcPayNow == true || Model.IsCcPayLater == true)
        {

            <div class="form-group d-none" id="credit-options1">
