                }
            });

            $('input[type=radio][name=payment]').change(function () {
                if (this.value == '3') {
                    $("#credit-options1").hide();
                    $("#card-details").hide();
                    $("#debit-options").hide();
                }
                else if (this.value == '4') {
                    $("#credit-options1").show();
                    $("#credit-options1").removeClass('d-none');
                    $("#card-details").hide();
                    $("#debit-options").hide();
                }

            });
        });
    </script>
}
