            $.ajax({

                /**/
                url: '@Url.Action("Registration", "User")',
                /**/
                type: 'Post',
                datatype: 'json',
                data: { UserData: stringData },
                success: function (data) {
                    // debugger;
                    var countDownDate = data.status;
                    if (!countDownDate) {
                        $('#otpError').html(data.message).css('color', 'red');
                        //return;
                    }
                    else {
                        toastr.options = {
                            "closeButton": true,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": true,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        };
                        toastr['info']('Registered Successfully !');
                        window.location.href = "/Home/Index";
                        //swal({
                        //    text: "Registered Successfully !",
                        //    icon: "success",

                        //    buttons: {
                        //        button: "Ok!",
                        //    },
                        //})
                        //    .then((value) => {
                        //        window.location.href = '@Url.Action("Index", "Home")'
                        //    });
                    }
                },
                error: function () {
                    //alert("Something went wrong, try after sometime.")
                    toastr.options = {
                            "closeButton": true,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": true,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        };
                    toastr['error']('Something went wrong, try after sometime');
                }

            })

        }
        $(function () {
            $('#fnam').keydown(function (e) {
                if (e.ctrlKey || e.altKey) {
                    e.preventDefault();
                } else {
                    var key = e.keyCode;
                    if (!((key == 8) || (key == 9) || (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90))) {
                        e.preventDefault();
                    }
                }
            }); 
        });

        $(document).ready(function () {
            $('#pswd , #Password ,passConf ').on("cut copy paste", function (e) {
                e.preventDefault();
            }); 
        });

        $('#mobileNo').keypress(function (event) {
            console.log(event.which);
            if (event.which != 8 && isNaN(String.fromCharCode(event.which))) {
                event.preventDefault();
            }
        });
        $(document).ready(function () {
            $("#eml").blur(function () {
                // debugger;
                verifyEmail();
            });
            $("#eml").change(function () {
                // debugger;
                verifyEmail();
            });

            $("#fnam").blur(function () {
                // debugger;
                var val = $(this).val();
                $("#fnameErr").text(val == "" ? "First Name Required" : "");
            });
            $("#lnam").blur(function () {
                // debugger;
                var val = $(this).val();
                $("#lnameErr").text(val == "" ? "Last Name Required" : "");
            });
            $("#pswd").blur(function () {
                // debugger;
                var val = $(this).val();
                $("#pswrdErr").text(val == "" ? "Password Required" : "");
            });
            $("#passConf").blur(function () {
                // debugger;
                var val = $(this).val();
                $("#ConpswrdErr").text(val == "" ? "Confirm Password Required" : "");
                if ($('#pswd').val() != $('#passConf').val() && $("#passConf").val() != '') {
                    $('#ConpswrdErr').html('Password Not Matching').addClass("text-danger");
                    return
                }
            });
        });
        $(window, document, undefined).ready(function () {

            $('#Signup input').blur(function () {
                var $this = $(this);
                if ($this.val())
                    $this.addClass('used');
                else
                    $this.removeClass('used');
            });
        });

    </script>
