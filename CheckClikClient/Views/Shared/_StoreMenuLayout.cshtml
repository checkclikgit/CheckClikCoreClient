                                <ul class="sub-menu branch-timing-dd">
                                    <li>Today> 8:00 AM > 6:00 PM</li>
                                    @{
                                    string Day = "";
                                    }
                                    @if (Model.BranchShift != null && Model.BranchShift.Count() > 0)
                                    {
                                    <li>Today > @Model.BranchStatus > @Model.Shift</li>
                                    @foreach (var items in Model.BranchShift)
                                    {
                                    switch (items.WeekDay)
                                    {
                                    case 1:
                                    Day = "Sunday";
                                    break;
                                    case 2:
                                    Day = "Monday";
                                    break;
                                    case 3:
                                    Day = "Tuesday";
                                    break;
                                    case 4:
                                    Day = "Wednesday";
                                    break;
                                    case 5:
                                    Day = "Thursday";
                                    break;
                                    case 6:
                                    Day = "Friday";
                                    break;
                                    case 7:
                                    Day = "Saturday";
                                    break;

                                    };
                                    if (items.IsClose == false)
                                    {
                                    <li>
                                    @Day:
                                    @if (items.IsOpen24Hrs == true)
                                    {
                                    @Html.Raw("Open 24 hours")
                                    }
                                    else
                                    {
                                    @Html.Raw(@items.StartTime +" to "+ @items.EndTime)

                                    }
                                    </li>
                                    }
                                    else
                                    {
                                    <li>
                                    @Day : Close
                                    </li>
                                    }

                                    }

                                    }
                                </ul>

                            </li>
                        </ul>
                    </nav>
