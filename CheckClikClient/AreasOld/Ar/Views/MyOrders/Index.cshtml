        function PlusQty(id) {

            var min = 1;
            var max = $('#hdnquanty_' + id).val();
            var act = $('#txtval_' + id).val();

            if (min <= act && max > act) {
                var a = parseInt(act);
                a++;
                $('#txtval_' + id).val(a);

            }
        }

        function MinusQty(id) {

            var min = 1;
            var max = $('#hdnquanty_' + id).val();
            var act = $('#txtval_' + id).val();

            if (min < act && max >= act) {

                var a = parseInt(act);
                if (a >= 1) {
                    a--;
                }

                $('#txtval_' + id).val(a);
            }
        }

